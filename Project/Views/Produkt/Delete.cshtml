@model Project.Models.Produkt

@{
    ViewData["Title"] = "Delete";
}

<h1>Fshirje Produktesh</h1>

<h3>Deshironi ta fshini kete produkt?</h3>
<div>
    <hr /> 
        <div class="row">
            <div class="col-md-6 offset-2">
                <div class="card mb-12" style="width: 37rem;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-danger">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @Model.Emri
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-4">
                        <img src="~/images/@Html.DisplayFor(model => model.Foto)" width="250" height="250" alt="@Model.Emri" />           
                        </div>
                        <div class="col-md-8">
                            <div class="card-body">
                                <p class="card-text">@Model.Pershkrimi</p>
                                <p class="card-text" style="text-decoration-color:#111">
                                    <b>Furnizuesi: </b>
                                    <a asp-controller="Furnizues" asp-action="Details" asp-route-id="@Model.FurnizuesID">
                                        @Model.Furnizues.Emri
                                    </a>
                                </p>
                                <br />
                                <p class="card-text">
                                    <b>Kategoria: </b>                                   
                                        @Model.Kategori.Emri
                                </p>
                                <br />
                                <p style="color:#96BEFF">@Model.Cmimi ALL</p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer bg-white">
                            <p class="card-text">
                                <a class="btn btn-danger float-right" asp-action="Index">
                                    Kthehu Pas
                                </a>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="Id" />
                                <input type="submit" value="Delete" class="btn btn-danger" />
                            </form>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
</div>
