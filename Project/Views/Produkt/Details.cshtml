@model Produkt
@{
    ViewData["Title"] = "Detajet e Produktit";
}

        <div class="row">
            <div class="col-md-6 offset-2">
                <div class="card mb-12" style="width: 42rem;">
                    <div class="row g-0">
                        <div class="col-md-12">
                            <div class="card-header text-white bg-danger">
                                <p class="card-text">
                                    <h5 class="card-title">
                                        @Model.Emri
                                    </h5>
                                </p>
                            </div>
                        </div>
                        <div class="col-md-6">
                        <img width="250" height="250" src="~/images/@Model.Foto" /><br>
                        </div>
                        <div class="col-md-6">
                            <div class="card-body">
                                <p class="card-text">@Model.Pershkrimi</p>
                                <p class="card-text" style="text-decoration-color:#111">
                                    <b>Furnizuesi: </b>
                                    <a asp-controller="Furnizues" asp-action="Details" asp-route-id="@Model.FurnizuesID">
                                        @Model.Furnizues.Emri
                                    </a>
                                </p>
                                <br />
                        <p class="card-text">
                            <b>Kategoria: </b>@Model.Kategori.Emri
                                </p>
                                <br />
                        <p style="color:#96BEFF">@Model.Cmimi ALL</p>
                            </div>

                        </div>
                    </div>
                    <div class="col-md-14">
                        <div class="card-footer bg-white">
                            <p class="card-text">
                                <a class="btn btn-danger float-left" asp-action="Index">
                                    Kthehu Pas
                                </a>
                        @if (User.IsInRole("Admin"))
                        {
                            <a class="btn btn-danger float-" asp-action="ProduktOferte" asp-route-id="@Model.Id">
                                Vendoseni ne Oferte
                            </a>

                            <a class="btn btn-primary float-left" asp-action="Edit" asp-route-id="@Model.Id">
                               Edito
                            </a>
                            <a class="btn btn-danger float-center" asp-action="Delete" asp-route-id="@Model.Id">
                               Fshi
                            </a>
                        }
                             <a class="btn btn-success float-end" asp-controller="Cart" asp-action="Add" asp-route-id="@Model.Id">Shto ne Karte</a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
 

    